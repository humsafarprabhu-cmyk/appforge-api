olor:transparent}.day-pill .d{font-size:10px;color:rgba(255,255,255,0.4);margin-bottom:4px}.day-pill.active .d{color:rgba(255,255,255,0.8)}.day-pill .n{font-size:16px;font-weight:600}.habit-list{padding:0 20px}.habit-card{display:flex;align-items:center;gap:14px;padding:16px;margin-bottom:10px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:16px;transition:all 0.3s;cursor:pointer;animation:slideUp 0.4s ease backwards}.habit-card:nth-child(1){animation-delay:0.05s}.habit-card:nth-child(2){animation-delay:0.1s}.habit-card:nth-child(3){animation-delay:0.15s}.habit-card:nth-child(4){animation-delay:0.2s}.habit-card:nth-child(5){animation-delay:0.25s}.habit-card:nth-child(6){animation-delay:0.3s}@keyframes slideUp{from{opacity:0;transform:translateY(12px)}to{opacity:1;transform:translateY(0)}}.habit-card.done{border-color:rgba(52,211,153,0.3);background:rgba(52,211,153,0.05)}.habit-icon{width:48px;height:48px;border-radius:14px;display:flex;align-items:center;justify-content:center;font-size:22px}.habit-info{flex:1}.habit-info .name{font-size:15px;font-weight:500}.habit-info .streak{font-size:12px;color:rgba(255,255,255,0.4);margin-top:2px}.check{width:32px;height:32px;border-radius:50%;border:2px solid rgba(255,255,255,0.15);display:flex;align-items:center;justify-content:center;transition:all 0.4s;font-size:16px}.check.checked{background:#34d399;border-color:#34d399;animation:pop 0.4s cubic-bezier(0.34,1.56,0.64,1)}@keyframes pop{0%{transform:scale(0.5)}50%{transform:scale(1.2)}100%{transform:scale(1)}}.fab{position:fixed;bottom:85px;right:20px;width:56px;height:56px;border-radius:50%;background:linear-gradient(135deg,#6366f1,#8b5cf6);display:flex;align-items:center;justify-content:center;font-size:28px;cursor:pointer;box-shadow:0 4px 24px rgba(99,102,241,0.4);transition:transform 0.3s;z-index:10}.fab:hover{transform:scale(1.1)}.nav{position:fixed;bottom:0;left:0;right:0;height:70px;background:rgba(5,5,7,0.9);backdrop-filter:blur(20px);border-top:1px solid rgba(255,255,255,0.06);display:flex;justify-content:space-around;align-items:center}.nav-item{display:flex;flex-direction:column;align-items:center;gap:4px;cursor:pointer;padding:8px 16px;border-radius:12px;transition:all 0.3s}.nav-item.active{background:rgba(99,102,241,0.15)}.nav-item .icon{font-size:20px}.nav-item .label{font-size:10px;color:rgba(255,255,255,0.4)}.nav-item.active .label{color:#818cf8}</style></head><body><div class=\"header\"><div><h1>HabitFlow</h1><div class=\"date\" id=\"dateStr\"></div></div></div><div class=\"streak-card\"><div class=\"big\" id=\"bestStreak\">0</div><div class=\"lbl\">üî• Day Streak</div><div class=\"sub\"><div class=\"sub-item\"><div class=\"val\" id=\"doneToday\">0/0</div><div class=\"sl\">Completed</div></div><div class=\"sub-item\"><div class=\"val\" id=\"totalDone\">0</div><div class=\"sl\">Total Done</div></div></div></div><div class=\"day-nav\" id=\"dayNav\"></div><div class=\"habit-list\" id=\"habitList\"></div><div class=\"fab\" onclick=\"navigate('All Habits')\">+</div><nav class=\"nav\"><div class=\"nav-item active\" onclick=\"navigate('Today')\"><span class=\"icon\">üìÖ</span><span class=\"label\">Today</span></div><div class=\"nav-item\" onclick=\"navigate('All Habits')\"><span class=\"icon\">üìã</span><span class=\"label\">Habits</span></div><div class=\"nav-item\" onclick=\"navigate('Streaks')\"><span class=\"icon\">üî•</span><span class=\"label\">Streaks</span></div><div class=\"nav-item\" onclick=\"navigate('Stats')\"><span class=\"icon\">üìä</span><span class=\"label\">Stats</span></div><div class=\"nav-item\" onclick=\"navigate('Settings')\"><span class=\"icon\">‚öôÔ∏è</span><span class=\"label\">Settings</span></div></nav><script>function navigate(s){window.parent.postMessage({type:'navigate',screen:s},'*')}const today=new Date().toISOString().split('T')[0];document.getElementById('dateStr').textContent=new Date().toLocaleDateString('en-IN',{weekday:'long',day:'numeric',month:'long'});function initData(){if(!localStorage.getItem('hf_habits')){const habits=[{id:1,name:'Morning Workout',icon:'üí™',color:'rgba(251,146,60,0.15)',streak:12},{id:2,name:'Read 30 mins',icon:'üìñ',color:'rgba(56,189,248,0.15)',streak:8},{id:3,name:'Drink 3L Water',icon:'üíß',color:'rgba(99,102,241,0.15)',streak:15},{id:4,name:'Meditate',icon:'üßò',color:'rgba(139,92,246,0.15)',streak:5},{id:5,name:'No Social Media',icon:'üìµ',color:'rgba(244,114,182,0.15)',streak:3},{id:6,name:'Journal',icon:'üìù',color:'rgba(52,211,153,0.15)',streak:7}];localStorage.setItem('hf_habits',JSON.stringify(habits))}if(!localStorage.getItem('hf_log')){localStorage.setItem('hf_log',JSON.stringify({}))}}function getLog(){return JSON.parse(localStorage.getItem('hf_log')||'{}')}function toggleHabit(id){const log=getLog();if(!log[today])log[today]=[];const idx=log[today].indexOf(id);if(idx===-1)log[today].push(id);else log[today].splice(idx,1);localStorage.setItem('hf_log',JSON.stringify(log));render()}function render(){const habits=JSON.parse(localStorage.getItem('hf_habits')||'[]');const log=getLog();const todayLog=log[today]||[];const done=todayLog.length;const total=habits.length;document.getElementById('doneToday').textContent=`${done}/${total}`;document.getElementById('bestStreak').textContent=Math.max(...habits.map(h=>h.streak),0);const allDone=Object.values(log).reduce((s,v)=>s+v.length,0);document.getElementById('totalDone').textContent=allDone;const list=document.getElementById('habitList');list.innerHTML=habits.map(h=>{const isDone=todayLog.includes(h.id);return`<div class=\"habit-card ${isDone?'done':''}\" onclick=\"toggleHabit(${h.id})\"><div class=\"habit-icon\" style=\"background:${h.color}\">${h.icon}</div><div class=\"habit-info\"><div class=\"name\">${h.name}</div><div class=\"streak\">üî• ${h.streak} day streak</div></div><div class=\"check ${isDone?'checked':''}\">${isDone?'‚úì':''}</div></div>`}).join('');const dayNav=document.getElementById('dayNav');const days=['S','M','T','W','T','F','S'];const now=new Date();const dayEls=[];for(let i=-3;i<=3;i++){const d=new Date(now);d.setDate(d.getDate()+i);const isToday=i===0;dayEls.push(`<div class=\"day-pill ${isToday?'active':''}\" ><div class=\"d\">${days[d.getDay()]}</div><div class=\"n\">${d.getDate()}</div></div>`)}dayNav.innerHTML=dayEls.join('')}initData();render();</script></body></html>"
