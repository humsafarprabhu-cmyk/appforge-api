play:flex;align-items:center;justify-content:center;font-size:22px}.streak-card .info{flex:1}.streak-card .info .name{font-size:14px;font-weight:500;margin-bottom:4px}.streak-bar{height:6px;background:rgba(255,255,255,0.06);border-radius:3px;overflow:hidden}.streak-fill{height:100%;border-radius:3px;background:linear-gradient(90deg,#6366f1,#a78bfa);transition:width 0.8s ease}.streak-card .days{font-size:20px;font-weight:700;color:#818cf8;min-width:50px;text-align:right}.streak-card .days span{display:block;font-size:10px;color:rgba(255,255,255,0.3);font-weight:400}.nav{position:fixed;bottom:0;left:0;right:0;height:70px;background:rgba(5,5,7,0.9);backdrop-filter:blur(20px);border-top:1px solid rgba(255,255,255,0.06);display:flex;justify-content:space-around;align-items:center}.nav-item{display:flex;flex-direction:column;align-items:center;gap:4px;cursor:pointer;padding:8px 16px;border-radius:12px;transition:all 0.3s}.nav-item.active{background:rgba(99,102,241,0.15)}.nav-item .icn{font-size:20px}.nav-item .lbl{font-size:10px;color:rgba(255,255,255,0.4)}.nav-item.active .lbl{color:#818cf8}</style></head><body><div class=\"header\"><h1>Streaks & Calendar</h1></div><div class=\"calendar-grid\"><div class=\"cal-header\"><div class=\"month\">February 2026</div><div class=\"arrows\"><div class=\"arr\">‚Äπ</div><div class=\"arr\">‚Ä∫</div></div></div><div class=\"cal-days\" id=\"calGrid\"></div></div><div class=\"streak-list\"><div class=\"streak-title\">Current Streaks</div><div id=\"streakList\"></div></div><nav class=\"nav\"><div class=\"nav-item\" onclick=\"navigate('Today')\"><span class=\"icn\">üìÖ</span><span class=\"lbl\">Today</span></div><div class=\"nav-item\" onclick=\"navigate('All Habits')\"><span class=\"icn\">üìã</span><span class=\"lbl\">Habits</span></div><div class=\"nav-item active\" onclick=\"navigate('Streaks')\"><span class=\"icn\">üî•</span><span class=\"lbl\">Streaks</span></div><div class=\"nav-item\" onclick=\"navigate('Stats')\"><span class=\"icn\">üìä</span><span class=\"lbl\">Stats</span></div><div class=\"nav-item\" onclick=\"navigate('Settings')\"><span class=\"icn\">‚öôÔ∏è</span><span class=\"lbl\">Settings</span></div></nav><script>function navigate(s){window.parent.postMessage({type:'navigate',screen:s},'*')}function render(){const habits=JSON.parse(localStorage.getItem('hf_habits')||'[]');const log=JSON.parse(localStorage.getItem('hf_log')||'{}');const today=new Date();const dayLabels=['Su','Mo','Tu','We','Th','Fr','Sa'];const cal=document.getElementById('calGrid');let html=dayLabels.map(d=>`<div class=\"day-label\">${d}</div>`).join('');const year=2026,month=1;const firstDay=new Date(year,month,1).getDay();const daysInMonth=new Date(year,month+1,0).getDate();for(let i=0;i<firstDay;i++)html+=`<div class=\"day\"></div>`;const doneSet=new Set();Object.entries(log).forEach(([date,ids])=>{if(ids.length>0)doneSet.add(date)});for(let d=1;d<=daysInMonth;d++){const dateStr=`${year}-${String(month+1).padStart(2,'0')}-${String(d).padStart(2,'0')}`;const isToday=d===today.getDate()&&month===today.getMonth();const isDone=doneSet.has(dateStr);const dayIds=log[dateStr]||[];const isPartial=dayIds.length>0&&dayIds.length<habits.length;html+=`<div class=\"day ${isDone&&dayIds.length>=habits.length?'done':isPartial?'partial':''} ${isToday?'today':''}\">${d}</div>`}cal.innerHTML=html;const maxStreak=Math.max(...habits.map(h=>h.streak),1);document.getElementById('streakList').innerHTML=habits.sort((a,b)=>b.streak-a.streak).map(h=>`<div class=\"streak-card\"><div class=\"icon\" style=\"background:${h.color}\">${h.icon}</div><div class=\"info\"><div class=\"name\">${h.name}</div><div class=\"streak-bar\"><div class=\"streak-fill\" style=\"width:${(h.streak/maxStreak)*100}%\"></div></div></div><div class=\"days\">${h.streak}<span>days</span></div></div>`).join('')}render();</script></body></html>"
