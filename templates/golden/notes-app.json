      "name": "Folders",
      "html": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no\"><title>NoteVault - Folders</title><style>*{margin:0;padding:0;box-sizing:border-box}body{background:#050507;color:#fff;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;min-height:100vh;padding-bottom:80px}.header{padding:20px;display:flex;justify-content:space-between;align-items:center}.header h1{font-size:20px;font-weight:600}.header .add{padding:8px 16px;background:rgba(245,158,11,0.15);border:none;border-radius:10px;color:#fbbf24;font-size:13px;cursor:pointer;font-family:inherit}.folder-grid{display:grid;grid-template-columns:1fr 1fr;gap:12px;padding:0 20px}.folder-card{padding:20px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:16px;cursor:pointer;transition:all 0.3s;animation:fadeIn 0.3s ease backwards}.folder-card:hover{background:rgba(255,255,255,0.06);transform:translateY(-2px)}@keyframes fadeIn{from{opacity:0;transform:scale(0.95)}to{opacity:1;transform:scale(1)}}.folder-card .icon{font-size:36px;margin-bottom:12px}.folder-card .name{font-size:15px;font-weight:600;margin-bottom:4px}.folder-card .count{font-size:12px;color:rgba(255,255,255,0.4)}.folder-card.work{border-left:3px solid #38bdf8}.folder-card.personal{border-left:3px solid #34d399}.folder-card.study{border-left:3px solid #fbbf24}.folder-card.ideas{border-left:3px solid #f472b6}.folder-card.health{border-left:3px solid #a78bfa}.folder-card.all{border-left:3px solid rgba(255,255,255,0.2)}.stats{margin:24px 20px 0;padding:20px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:16px}.stats-title{font-size:14px;font-weight:600;margin-bottom:16px}.stat-row{display:flex;justify-content:space-between;padding:10px 0;border-bottom:1px solid rgba(255,255,255,0.04)}.stat-row:last-child{border-bottom:none}.stat-row .lbl{font-size:13px;color:rgba(255,255,255,0.5)}.stat-row .val{font-size:13px;font-weight:600}.nav{position:fixed;bottom:0;left:0;right:0;height:70px;background:rgba(5,5,7,0.9);backdrop-filter:blur(20px);border-top:1px solid rgba(255,255,255,0.06);display:flex;justify-content:space-around;align-items:center}.nav-item{display:flex;flex-direction:column;align-items:center;gap:4px;cursor:pointer;padding:8px 16px;border-radius:12px;transition:all 0.3s}.nav-item.active{background:rgba(245,158,11,0.15)}.nav-item .icon{font-size:20px}.nav-item .label{font-size:10px;color:rgba(255,255,255,0.4)}.nav-item.active .label{color:#fbbf24}</style></head><body><div class=\"header\"><h1>Folders</h1><button class=\"add\" onclick=\"addFolder()\">+ New</button></div><div class=\"folder-grid\" id=\"folderGrid\"></div><div class=\"stats\"><div class=\"stats-title\">Quick Stats</div><div id=\"statsContent\"></div></div><nav class=\"nav\"><div class=\"nav-item\" onclick=\"navigate('All Notes')\"><span class=\"icon\">üìù</span><span class=\"label\">Notes</span></div><div class=\"nav-item\" onclick=\"navigate('Editor')\"><span class=\"icon\">‚úèÔ∏è</span><span class=\"label\">New</span></div><div class=\"nav-item active\" onclick=\"navigate('Folders')\"><span class=\"icon\">üìÅ</span><span class=\"label\">Folders</span></div><div class=\"nav-item\" onclick=\"navigate('Search')\"><span class=\"icon\">üîç</span><span class=\"label\">Search</span></div><div class=\"nav-item\" onclick=\"navigate('Settings')\"><span class=\"icon\">‚öôÔ∏è</span><span class=\"label\">Settings</span></div></nav><script>function navigate(s){window.parent.postMessage({type:'navigate',screen:s},'*')}const folderIcons={Work:'üíº',Personal:'üè†',Study:'üìö',Ideas:'üí°',Health:'‚ù§Ô∏è',All:'üìã'};const folderClasses={Work:'work',Personal:'personal',Study:'study',Ideas:'ideas',Health:'health'};function render(){const notes=JSON.parse(localStorage.getItem('nv_notes')||'[]');const folders={};notes.forEach(n=>{folders[n.folder]=(folders[n.folder]||0)+1});const allFolders=[{name:'All Notes',count:notes.length,cls:'all'},...Object.entries(folders).map(([name,count])=>({name,count,cls:folderClasses[name]||''}))];document.getElementById('folderGrid').innerHTML=allFolders.map(f=>`<div class=\"folder-card ${f.cls}\" onclick=\"navigate('All Notes')\"><div class=\"icon\">${folderIcons[f.name]||'üìÅ'}</div><div class=\"name\">${f.name}</div><div class=\"count\">${f.count} notes</div></div>`).join('');const totalWords=notes.reduce((s,n)=>s+n.content.split(/\\s+/).length,0);document.getElementById('statsContent').innerHTML=`<div class=\"stat-row\"><span class=\"lbl\">Total Notes</span><span class=\"val\">${notes.length}</span></div><div class=\"stat-row\"><span class=\"lbl\">Folders</span><span class=\"val\">${Object.keys(folders).length}</span></div><div class=\"stat-row\"><span class=\"lbl\">Total Words</span><span class=\"val\">${totalWords}</span></div><div class=\"stat-row\"><span class=\"lbl\">Pinned</span><span class=\"val\">${notes.filter(n=>n.pinned).length}</span></div>`}function addFolder(){const name=prompt('Folder name:');if(name)alert(`Folder \"${name}\" created! Add notes to it from the editor.`)}render();</script></body></html>"
