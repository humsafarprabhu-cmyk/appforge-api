      "name": "Search",
      "html": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no\"><title>NoteVault - Search</title><style>*{margin:0;padding:0;box-sizing:border-box}body{background:#050507;color:#fff;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;min-height:100vh;padding-bottom:80px}.header{padding:20px}.header h1{font-size:20px;font-weight:600;margin-bottom:16px}.search-box{width:100%;padding:16px 16px 16px 48px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.08);border-radius:16px;color:#fff;font-size:16px;outline:none;font-family:inherit}.search-box:focus{border-color:#f59e0b}.header{position:relative}.search-icon{position:absolute;left:36px;bottom:22px;font-size:18px}.recent{padding:20px}.recent-title{font-size:14px;color:rgba(255,255,255,0.4);font-weight:500;margin-bottom:12px}.recent-chips{display:flex;flex-wrap:wrap;gap:8px}.recent-chip{padding:8px 16px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:20px;font-size:13px;cursor:pointer;transition:all 0.3s}.recent-chip:hover{background:rgba(255,255,255,0.08)}.results{padding:0 20px}.result-item{display:flex;gap:14px;padding:16px;margin-bottom:10px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:16px;cursor:pointer;transition:all 0.3s;animation:fadeIn 0.3s ease}.result-item:hover{background:rgba(255,255,255,0.06)}@keyframes fadeIn{from{opacity:0}to{opacity:1}}.result-item .color-bar{width:4px;border-radius:2px;min-height:40px}.result-item .info{flex:1}.result-item .title{font-size:14px;font-weight:500;margin-bottom:4px}.result-item .preview{font-size:12px;color:rgba(255,255,255,0.4);display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden}.result-item .meta{display:flex;gap:8px;margin-top:6px;font-size:11px;color:rgba(255,255,255,0.25)}.empty{text-align:center;padding:60px 20px;color:rgba(255,255,255,0.2)}.empty .big{font-size:48px;margin-bottom:12px}.empty .txt{font-size:14px}.nav{position:fixed;bottom:0;left:0;right:0;height:70px;background:rgba(5,5,7,0.9);backdrop-filter:blur(20px);border-top:1px solid rgba(255,255,255,0.06);display:flex;justify-content:space-around;align-items:center}.nav-item{display:flex;flex-direction:column;align-items:center;gap:4px;cursor:pointer;padding:8px 16px;border-radius:12px;transition:all 0.3s}.nav-item.active{background:rgba(245,158,11,0.15)}.nav-item .icon{font-size:20px}.nav-item .label{font-size:10px;color:rgba(255,255,255,0.4)}.nav-item.active .label{color:#fbbf24}</style></head><body><div class=\"header\"><h1>Search</h1><span class=\"search-icon\">üîç</span><input type=\"text\" class=\"search-box\" id=\"searchInput\" placeholder=\"Search notes...\" oninput=\"search()\" autofocus></div><div class=\"recent\" id=\"recentSection\"><div class=\"recent-title\">Recent Searches</div><div class=\"recent-chips\"><div class=\"recent-chip\" onclick=\"quickSearch('meeting')\">meeting</div><div class=\"recent-chip\" onclick=\"quickSearch('workout')\">workout</div><div class=\"recent-chip\" onclick=\"quickSearch('ideas')\">ideas</div><div class=\"recent-chip\" onclick=\"quickSearch('react')\">react</div><div class=\"recent-chip\" onclick=\"quickSearch('books')\">books</div></div></div><div class=\"results\" id=\"results\"></div><nav class=\"nav\"><div class=\"nav-item\" onclick=\"navigate('All Notes')\"><span class=\"icon\">üìù</span><span class=\"label\">Notes</span></div><div class=\"nav-item\" onclick=\"navigate('Editor')\"><span class=\"icon\">‚úèÔ∏è</span><span class=\"label\">New</span></div><div class=\"nav-item\" onclick=\"navigate('Folders')\"><span class=\"icon\">üìÅ</span><span class=\"label\">Folders</span></div><div class=\"nav-item active\" onclick=\"navigate('Search')\"><span class=\"icon\">üîç</span><span class=\"label\">Search</span></div><div class=\"nav-item\" onclick=\"navigate('Settings')\"><span class=\"icon\">‚öôÔ∏è</span><span class=\"label\">Settings</span></div></nav><script>function navigate(s){window.parent.postMessage({type:'navigate',screen:s},'*')}const colorMap={yellow:'#fbbf24',blue:'#38bdf8',green:'#34d399',pink:'#f472b6',purple:'#a78bfa'};function quickSearch(q){document.getElementById('searchInput').value=q;search()}function search(){const q=document.getElementById('searchInput').value.trim().toLowerCase();if(!q){document.getElementById('recentSection').style.display='block';document.getElementById('results').innerHTML='';return}document.getElementById('recentSection').style.display='none';const notes=JSON.parse(localStorage.getItem('nv_notes')||'[]');const matches=notes.filter(n=>n.title.toLowerCase().includes(q)||n.content.toLowerCase().includes(q));if(matches.length===0){document.getElementById('results').innerHTML='<div class=\"empty\"><div class=\"big\">üîç</div><div class=\"txt\">No notes found</div></div>';return}document.getElementById('results').innerHTML=matches.map(n=>`<div class=\"result-item\" onclick=\"editNote(${n.id})\"><div class=\"color-bar\" style=\"background:${colorMap[n.color]||'#fbbf24'}\"></div><div class=\"info\"><div class=\"title\">${highlight(n.title,q)}</div><div class=\"preview\">${highlight(n.content,q)}</div><div class=\"meta\"><span>üìÅ ${n.folder}</span><span>üìÖ ${n.date}</span></div></div></div>`).join('')}function highlight(text,q){return text.replace(new RegExp(`(${q})`,'gi'),'<mark style=\"background:#f59e0b;color:#000;border-radius:2px;padding:0 2px\">$1</mark>')}function editNote(id){localStorage.setItem('nv_editing',String(id));navigate('Editor')}</script></body></html>"
    },
