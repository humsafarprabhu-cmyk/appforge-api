      "name": "Calendar",
      "html": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no\"><title>TaskZen - Calendar</title><style>*{margin:0;padding:0;box-sizing:border-box}body{background:#050507;color:#fff;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;min-height:100vh;padding-bottom:80px}.header{padding:20px}.header h1{font-size:20px;font-weight:600}.cal-nav{display:flex;align-items:center;justify-content:center;gap:20px;padding:0 20px 16px}.cal-nav .arr{width:36px;height:36px;border-radius:50%;background:rgba(255,255,255,0.04);display:flex;align-items:center;justify-content:center;cursor:pointer;font-size:16px}.cal-nav .month{font-size:16px;font-weight:600}.cal-grid{display:grid;grid-template-columns:repeat(7,1fr);gap:4px;padding:0 20px;margin-bottom:20px}.cal-grid .day-label{text-align:center;font-size:11px;color:rgba(255,255,255,0.3);padding:8px 0}.cal-grid .day{width:100%;aspect-ratio:1;border-radius:10px;display:flex;align-items:center;justify-content:center;font-size:13px;color:rgba(255,255,255,0.4);cursor:pointer;transition:all 0.3s;position:relative}.cal-grid .day:hover{background:rgba(255,255,255,0.04)}.cal-grid .day.today{border:1px solid #ec4899;color:#f472b6}.cal-grid .day.has-tasks::after{content:'';position:absolute;bottom:4px;width:4px;height:4px;border-radius:50%;background:#ec4899}.cal-grid .day.selected{background:linear-gradient(135deg,#ec4899,#f472b6);color:#fff}.section-title{padding:0 20px;font-size:14px;font-weight:600;margin-bottom:12px;color:rgba(255,255,255,0.6)}.day-tasks{padding:0 20px}.day-task{display:flex;align-items:center;gap:12px;padding:14px 16px;margin-bottom:8px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:14px;animation:fadeIn 0.3s ease}@keyframes fadeIn{from{opacity:0}to{opacity:1}}.day-task .pri{width:4px;height:32px;border-radius:2px}.day-task .pri.high{background:#f87171}.day-task .pri.medium{background:#fbbf24}.day-task .pri.low{background:#34d399}.day-task .info{flex:1}.day-task .info .name{font-size:14px;font-weight:500}.day-task .info .list{font-size:11px;color:rgba(255,255,255,0.3);margin-top:2px}.day-task .status{font-size:12px;color:rgba(255,255,255,0.3)}.empty{text-align:center;padding:40px;color:rgba(255,255,255,0.2)}.empty .big{font-size:40px;margin-bottom:8px}.nav{position:fixed;bottom:0;left:0;right:0;height:70px;background:rgba(5,5,7,0.9);backdrop-filter:blur(20px);border-top:1px solid rgba(255,255,255,0.06);display:flex;justify-content:space-around;align-items:center}.nav-item{display:flex;flex-direction:column;align-items:center;gap:4px;cursor:pointer;padding:8px 16px;border-radius:12px;transition:all 0.3s}.nav-item.active{background:rgba(236,72,153,0.15)}.nav-item .icon{font-size:20px}.nav-item .label{font-size:10px;color:rgba(255,255,255,0.4)}.nav-item.active .label{color:#f472b6}</style></head><body><div class=\"header\"><h1>Calendar</h1></div><div class=\"cal-nav\"><div class=\"arr\">‚Äπ</div><div class=\"month\">February 2026</div><div class=\"arr\">‚Ä∫</div></div><div class=\"cal-grid\" id=\"calGrid\"></div><div class=\"section-title\" id=\"selectedDate\">Today's Tasks</div><div class=\"day-tasks\" id=\"dayTasks\"></div><nav class=\"nav\"><div class=\"nav-item\" onclick=\"navigate('Today')\"><span class=\"icon\">üìÖ</span><span class=\"label\">Today</span></div><div class=\"nav-item\" onclick=\"navigate('Add Task')\"><span class=\"icon\">‚ûï</span><span class=\"label\">Add</span></div><div class=\"nav-item\" onclick=\"navigate('Lists')\"><span class=\"icon\">üìã</span><span class=\"label\">Lists</span></div><div class=\"nav-item active\" onclick=\"navigate('Calendar')\"><span class=\"icon\">üóìÔ∏è</span><span class=\"label\">Calendar</span></div><div class=\"nav-item\" onclick=\"navigate('Settings')\"><span class=\"icon\">‚öôÔ∏è</span><span class=\"label\">Settings</span></div></nav><script>function navigate(s){window.parent.postMessage({type:'navigate',screen:s},'*')}const today=new Date();let selectedDay=today.getDate();function render(){const tasks=JSON.parse(localStorage.getItem('tz_tasks')||'[]');const taskDates=new Set(tasks.map(t=>parseInt(t.date.split('-')[2])));const days=['Su','Mo','Tu','We','Th','Fr','Sa'];const cal=document.getElementById('calGrid');let html=days.map(d=>`<div class=\"day-label\">${d}</div>`).join('');const year=2026,month=1;const firstDay=new Date(year,month,1).getDay();const daysInMonth=new Date(year,month+1,0).getDate();for(let i=0;i<firstDay;i++)html+=`<div class=\"day\"></div>`;for(let d=1;d<=daysInMonth;d++){const isToday=d===today.getDate();const hasTasks=taskDates.has(d);const isSelected=d===selectedDay;html+=`<div class=\"day ${isToday?'today':''} ${hasTasks?'has-tasks':''} ${isSelected?'selected':''}\" onclick=\"selectDay(${d})\">${d}</div>`}cal.innerHTML=html;const dateStr=`2026-02-${String(selectedDay).padStart(2,'0')}`;const dayTasks=tasks.filter(t=>t.date===dateStr);document.getElementById('selectedDate').textContent=selectedDay===today.getDate()?\"Today's Tasks\":`Feb ${selectedDay} Tasks`;const container=document.getElementById('dayTasks');if(!dayTasks.length){container.innerHTML='<div class=\"empty\"><div class=\"big\">üéØ</div>No tasks for this day</div>';return}container.innerHTML=dayTasks.map(t=>`<div class=\"day-task\"><div class=\"pri ${t.priority}\"></div><div class=\"info\"><div class=\"name\">${t.name}</div><div class=\"list\">üìã ${t.list}</div></div><div class=\"status\">${t.done?'‚úÖ':'‚è≥'}</div></div>`).join('')}function selectDay(d){selectedDay=d;render()}render();</script></body></html>"
