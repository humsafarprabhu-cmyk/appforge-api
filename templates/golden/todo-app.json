      "name": "Lists",
      "html": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no\"><title>TaskZen - Lists</title><style>*{margin:0;padding:0;box-sizing:border-box}body{background:#050507;color:#fff;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;min-height:100vh;padding-bottom:80px}.header{padding:20px;display:flex;justify-content:space-between;align-items:center}.header h1{font-size:20px;font-weight:600}.header .add{padding:8px 16px;background:rgba(236,72,153,0.15);border:none;border-radius:10px;color:#f472b6;font-size:13px;cursor:pointer;font-family:inherit}.list-grid{padding:0 20px}.list-card{display:flex;align-items:center;gap:14px;padding:18px;margin-bottom:10px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:16px;cursor:pointer;transition:all 0.3s;animation:fadeIn 0.3s ease backwards}.list-card:hover{background:rgba(255,255,255,0.06)}@keyframes fadeIn{from{opacity:0;transform:translateY(6px)}to{opacity:1;transform:translateY(0)}}.list-card .icon{width:48px;height:48px;border-radius:14px;display:flex;align-items:center;justify-content:center;font-size:22px}.list-card .icon.personal{background:rgba(236,72,153,0.15)}.list-card .icon.work{background:rgba(56,189,248,0.15)}.list-card .icon.projects{background:rgba(139,92,246,0.15)}.list-card .icon.shopping{background:rgba(52,211,153,0.15)}.list-card .info{flex:1}.list-card .info .name{font-size:15px;font-weight:500}.list-card .info .count{font-size:12px;color:rgba(255,255,255,0.4);margin-top:3px}.list-card .info .bar{height:4px;background:rgba(255,255,255,0.06);border-radius:2px;margin-top:8px;overflow:hidden}.list-card .info .bar-fill{height:100%;border-radius:2px;transition:width 0.6s}.list-card .arrow{color:rgba(255,255,255,0.2);font-size:18px}.summary{margin:20px;padding:20px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:16px}.summary-title{font-size:14px;font-weight:600;margin-bottom:16px}.summary-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:12px}.summary-item{text-align:center;padding:12px}.summary-item .val{font-size:24px;font-weight:700}.summary-item .lbl{font-size:11px;color:rgba(255,255,255,0.4);margin-top:4px}.summary-item:nth-child(1) .val{color:#f472b6}.summary-item:nth-child(2) .val{color:#34d399}.summary-item:nth-child(3) .val{color:#fbbf24}.summary-item:nth-child(4) .val{color:#38bdf8}.nav{position:fixed;bottom:0;left:0;right:0;height:70px;background:rgba(5,5,7,0.9);backdrop-filter:blur(20px);border-top:1px solid rgba(255,255,255,0.06);display:flex;justify-content:space-around;align-items:center}.nav-item{display:flex;flex-direction:column;align-items:center;gap:4px;cursor:pointer;padding:8px 16px;border-radius:12px;transition:all 0.3s}.nav-item.active{background:rgba(236,72,153,0.15)}.nav-item .icon{font-size:20px}.nav-item .label{font-size:10px;color:rgba(255,255,255,0.4)}.nav-item.active .label{color:#f472b6}</style></head><body><div class=\"header\"><h1>Lists</h1><button class=\"add\" onclick=\"alert('Create a new list by adding tasks with a new list name!')\">+ New List</button></div><div class=\"list-grid\" id=\"listGrid\"></div><div class=\"summary\"><div class=\"summary-title\">Overview</div><div class=\"summary-grid\" id=\"summaryGrid\"></div></div><nav class=\"nav\"><div class=\"nav-item\" onclick=\"navigate('Today')\"><span class=\"icon\">üìÖ</span><span class=\"label\">Today</span></div><div class=\"nav-item\" onclick=\"navigate('Add Task')\"><span class=\"icon\">‚ûï</span><span class=\"label\">Add</span></div><div class=\"nav-item active\" onclick=\"navigate('Lists')\"><span class=\"icon\">üìã</span><span class=\"label\">Lists</span></div><div class=\"nav-item\" onclick=\"navigate('Calendar')\"><span class=\"icon\">üóìÔ∏è</span><span class=\"label\">Calendar</span></div><div class=\"nav-item\" onclick=\"navigate('Settings')\"><span class=\"icon\">‚öôÔ∏è</span><span class=\"label\">Settings</span></div></nav><script>function navigate(s){window.parent.postMessage({type:'navigate',screen:s},'*')}const listMeta={Personal:{icon:'üè†',cls:'personal',color:'#f472b6'},Work:{icon:'üíº',cls:'work',color:'#38bdf8'},Projects:{icon:'üöÄ',cls:'projects',color:'#a78bfa'},Shopping:{icon:'üõí',cls:'shopping',color:'#34d399'}};function render(){const tasks=JSON.parse(localStorage.getItem('tz_tasks')||'[]');const byList={};tasks.forEach(t=>{if(!byList[t.list])byList[t.list]={total:0,done:0};byList[t.list].total++;if(t.done)byList[t.list].done++});const grid=document.getElementById('listGrid');grid.innerHTML=Object.entries(byList).map(([name,data])=>{const meta=listMeta[name]||{icon:'üìã',cls:'personal',color:'#f472b6'};const pct=data.total?Math.round(data.done/data.total*100):0;return`<div class=\"list-card\" onclick=\"navigate('Today')\"><div class=\"icon ${meta.cls}\">${meta.icon}</div><div class=\"info\"><div class=\"name\">${name}</div><div class=\"count\">${data.done}/${data.total} tasks done</div><div class=\"bar\"><div class=\"bar-fill\" style=\"width:${pct}%;background:${meta.color}\"></div></div></div><div class=\"arrow\">‚Ä∫</div></div>`}).join('');const totalTasks=tasks.length;const doneTasks=tasks.filter(t=>t.done).length;const highPri=tasks.filter(t=>t.priority==='high'&&!t.done).length;document.getElementById('summaryGrid').innerHTML=`<div class=\"summary-item\"><div class=\"val\">${totalTasks}</div><div class=\"lbl\">Total Tasks</div></div><div class=\"summary-item\"><div class=\"val\">${doneTasks}</div><div class=\"lbl\">Completed</div></div><div class=\"summary-item\"><div class=\"val\">${highPri}</div><div class=\"lbl\">High Priority</div></div><div class=\"summary-item\"><div class=\"val\">${Object.keys(byList).length}</div><div class=\"lbl\">Lists</div></div>`}render();</script></body></html>"
