      "name": "Today",
      "html": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no\"><title>TaskZen</title><style>*{margin:0;padding:0;box-sizing:border-box}body{background:#050507;color:#fff;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;min-height:100vh;padding-bottom:80px}.header{padding:20px;display:flex;justify-content:space-between;align-items:center}.header h1{font-size:24px;background:linear-gradient(135deg,#f472b6,#ec4899);-webkit-background-clip:text;-webkit-text-fill-color:transparent}.header .date{font-size:13px;color:rgba(255,255,255,0.4)}.progress-card{margin:0 20px 20px;padding:20px;background:linear-gradient(135deg,#ec4899,#f472b6,#f9a8d4);border-radius:20px;position:relative;overflow:hidden}.progress-card::before{content:'';position:absolute;top:-40%;right:-15%;width:140px;height:140px;border-radius:50%;background:rgba(255,255,255,0.1)}.progress-card .top{display:flex;justify-content:space-between;align-items:center;margin-bottom:12px}.progress-card .top .title{font-size:16px;font-weight:600}.progress-card .top .count{font-size:14px;opacity:0.8}.progress-bar{height:8px;background:rgba(255,255,255,0.2);border-radius:4px;overflow:hidden}.progress-fill{height:100%;background:#fff;border-radius:4px;transition:width 0.8s ease}.priority-section{padding:0 20px;margin-bottom:16px}.priority-label{display:flex;align-items:center;gap:8px;font-size:13px;font-weight:600;margin-bottom:10px;color:rgba(255,255,255,0.6)}.priority-label .dot{width:8px;height:8px;border-radius:50%}.priority-label .dot.high{background:#f87171}.priority-label .dot.medium{background:#fbbf24}.priority-label .dot.low{background:#34d399}.task-list{list-style:none}.task-item{display:flex;align-items:center;gap:12px;padding:14px 16px;margin-bottom:8px;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.06);border-radius:14px;cursor:pointer;transition:all 0.3s;animation:slideIn 0.3s ease backwards}.task-item:hover{background:rgba(255,255,255,0.06)}.task-item.done{opacity:0.4}.task-item.done .task-name{text-decoration:line-through}@keyframes slideIn{from{opacity:0;transform:translateX(-10px)}to{opacity:1;transform:translateX(0)}}.checkbox{width:24px;height:24px;border-radius:50%;border:2px solid rgba(255,255,255,0.15);display:flex;align-items:center;justify-content:center;transition:all 0.3s;flex-shrink:0}.checkbox.checked{background:#ec4899;border-color:#ec4899;animation:pop 0.3s ease}.checkbox.checked::after{content:'‚úì';font-size:13px}@keyframes pop{50%{transform:scale(1.2)}}.task-info{flex:1;min-width:0}.task-name{font-size:14px;font-weight:500}.task-meta{display:flex;gap:8px;margin-top:4px;font-size:11px;color:rgba(255,255,255,0.3)}.task-meta .tag{padding:2px 8px;border-radius:6px;background:rgba(255,255,255,0.04)}.fab{position:fixed;bottom:85px;right:20px;width:56px;height:56px;border-radius:50%;background:linear-gradient(135deg,#ec4899,#f472b6);display:flex;align-items:center;justify-content:center;font-size:28px;cursor:pointer;box-shadow:0 4px 24px rgba(236,72,153,0.4);z-index:10;transition:transform 0.3s}.fab:hover{transform:scale(1.1)}.nav{position:fixed;bottom:0;left:0;right:0;height:70px;background:rgba(5,5,7,0.9);backdrop-filter:blur(20px);border-top:1px solid rgba(255,255,255,0.06);display:flex;justify-content:space-around;align-items:center}.nav-item{display:flex;flex-direction:column;align-items:center;gap:4px;cursor:pointer;padding:8px 16px;border-radius:12px;transition:all 0.3s}.nav-item.active{background:rgba(236,72,153,0.15)}.nav-item .icon{font-size:20px}.nav-item .label{font-size:10px;color:rgba(255,255,255,0.4)}.nav-item.active .label{color:#f472b6}</style></head><body><div class=\"header\"><div><h1>TaskZen</h1><div class=\"date\" id=\"dateStr\"></div></div></div><div class=\"progress-card\"><div class=\"top\"><span class=\"title\">Today's Progress</span><span class=\"count\" id=\"progressText\">0/0</span></div><div class=\"progress-bar\"><div class=\"progress-fill\" id=\"progressFill\" style=\"width:0%\"></div></div></div><div id=\"taskSections\"></div><div class=\"fab\" onclick=\"navigate('Add Task')\">+</div><nav class=\"nav\"><div class=\"nav-item active\" onclick=\"navigate('Today')\"><span class=\"icon\">üìÖ</span><span class=\"label\">Today</span></div><div class=\"nav-item\" onclick=\"navigate('Add Task')\"><span class=\"icon\">‚ûï</span><span class=\"label\">Add</span></div><div class=\"nav-item\" onclick=\"navigate('Lists')\"><span class=\"icon\">üìã</span><span class=\"label\">Lists</span></div><div class=\"nav-item\" onclick=\"navigate('Calendar')\"><span class=\"icon\">üóìÔ∏è</span><span class=\"label\">Calendar</span></div><div class=\"nav-item\" onclick=\"navigate('Settings')\"><span class=\"icon\">‚öôÔ∏è</span><span class=\"label\">Settings</span></div></nav><script>function navigate(s){window.parent.postMessage({type:'navigate',screen:s},'*')}document.getElementById('dateStr').textContent=new Date().toLocaleDateString('en-IN',{weekday:'long',day:'numeric',month:'long'});function initData(){if(!localStorage.getItem('tz_tasks')){const tasks=[{id:1,name:'Review PRs on GitHub',priority:'high',list:'Work',done:false,date:'2026-02-20'},{id:2,name:'Call dentist for appointment',priority:'high',list:'Personal',done:false,date:'2026-02-20'},{id:3,name:'Prepare presentation slides',priority:'high',list:'Work',done:true,date:'2026-02-20'},{id:4,name:'Buy groceries for dinner',priority:'medium',list:'Personal',done:false,date:'2026-02-20'},{id:5,name:'Reply to client emails',priority:'medium',list:'Work',done:false,date:'2026-02-20'},{id:6,name:'Update portfolio website',priority:'medium',list:'Projects',done:true,date:'2026-02-20'},{id:7,name:'Read 30 pages of book',priority:'low',list:'Personal',done:false,date:'2026-02-20'},{id:8,name:'Organize desktop files',priority:'low',list:'Personal',done:false,date:'2026-02-20'},{id:9,name:'Plan weekend trip',priority:'low',list:'Personal',done:true,date:'2026-02-20'}];localStorage.setItem('tz_tasks',JSON.stringify(tasks))}}function toggleTask(id){const tasks=JSON.parse(localStorage.getItem('tz_tasks')||'[]');const task=tasks.find(t=>t.id===id);if(task)task.done=!task.done;localStorage.setItem('tz_tasks',JSON.stringify(tasks));render()}function render(){const tasks=JSON.parse(localStorage.getItem('tz_tasks')||'[]');const today=tasks;const done=today.filter(t=>t.done).length;const total=today.length;const pct=total?Math.round(done/total*100):0;document.getElementById('progressText').textContent=`${done}/${total}`;document.getElementById('progressFill').style.width=pct+'%';const priorities=['high','medium','low'];const labels={high:'üî¥ High Priority',medium:'üü° Medium Priority',low:'üü¢ Low Priority'};const sections=document.getElementById('taskSections');sections.innerHTML=priorities.map(p=>{const items=today.filter(t=>t.priority===p);if(!items.length)return'';return`<div class=\"priority-section\"><div class=\"priority-label\"><span class=\"dot ${p}\"></span>${labels[p]}</div><ul class=\"task-list\">${items.map(t=>`<li class=\"task-item ${t.done?'done':''}\" onclick=\"toggleTask(${t.id})\"><div class=\"checkbox ${t.done?'checked':''}\"></div><div class=\"task-info\"><div class=\"task-name\">${t.name}</div><div class=\"task-meta\"><span class=\"tag\">üìã ${t.list}</span></div></div></li>`).join('')}</ul></div>`}).join('')}initData();render();</script></body></html>"
